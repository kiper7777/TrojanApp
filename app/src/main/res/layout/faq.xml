<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_turquoise"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="16dp">

        <!-- Logo -->
        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_gravity="start"
            android:layout_marginStart="-12dp"
            android:layout_marginBottom="0dp"
            android:src="@drawable/logo_project_trojan"
            android:contentDescription="@string/logo" />

        <!-- Content container with horizontal padding -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <!-- Page Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="30dp"
                android:text="@string/faq"
                android:textColor="@color/white"
                android:textSize="32sp"
                android:textStyle="bold" />

            <!-- FAQ Container -->
            <LinearLayout
                android:id="@+id/faq_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- FAQ items (5 examples) -->
                <!-- Repeat pattern begins -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Could you summarise the core gameplay for Trojan and explain the primary motivation behind its design?"
                        android:textSize="17sp"
                        android:textColor="@color/white"
                        android:padding="8dp"
                        android:textStyle="bold"
                        android:gravity="center_vertical" />
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginStart="8dp"
                        android:src="@android:drawable/ic_menu_add" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="How did the team arrive at the specific colour themes to create the intended atmosphere of tension and claustrophobia?"
                        android:textSize="17sp"
                        android:textColor="@color/white"
                        android:padding="8dp"
                        android:textStyle="bold"
                        android:gravity="center_vertical" />
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginStart="8dp"
                        android:src="@android:drawable/ic_menu_add" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="What were the key inspirations or influences that shaped the health sector mechanics and the overall setting of 'Trojan'?"
                        android:textSize="17sp"
                        android:textColor="@color/white"
                        android:padding="8dp"
                        android:textStyle="bold"
                        android:gravity="center_vertical" />
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginStart="8dp"
                        android:src="@android:drawable/ic_menu_add" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="From the game designer’s perspective, what is the most important aspect of the player experience you aim to create with 'Trojan'?"
                        android:textSize="17sp"
                        android:textColor="@color/white"
                        android:padding="8dp"
                        android:textStyle="bold"
                        android:gravity="center_vertical" />
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginStart="8dp"
                        android:src="@android:drawable/ic_menu_add" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="How did the experimental use of the project contribute to the game’s narrative and the player’s sense of immersion with the high-tech facility?"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:padding="8dp"
                        android:gravity="center_vertical" />
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginStart="8dp"
                        android:src="@android:drawable/ic_menu_add" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Footer Section -->
        <LinearLayout
            android:id="@+id/footer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:orientation="vertical"
            android:background="#1E1E1E"
            android:padding="20dp">

            <!-- Contact Us Title -->
            <TextView
                android:id="@+id/contact_us"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/contact_us"
                android:textStyle="bold"
                android:textColor="@color/dark_turquoise"
                android:textSize="18sp"
                android:layout_marginBottom="8dp" />

            <!-- Email Row -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:id="@+id/email_icon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:contentDescription="@string/email"
                    android:src="@drawable/email_icon" />

                <TextView
                    android:id="@+id/email_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/email_icon"
                    android:layout_toEndOf="@id/email_icon"
                    android:layout_marginStart="10dp"
                    android:text="@string/email"
                    android:textColor="@color/dark_turquoise"
                    android:textSize="14sp" />
            </RelativeLayout>

            <!-- Footer Items -->
            <TextView
                android:id="@+id/footer_item1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="280dp"
                android:text="@string/footer_item1"
                android:textColor="@color/white"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/footer_item2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="280dp"
                android:text="@string/footer_item2"
                android:textColor="@color/white"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/footer_item3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="280dp"
                android:text="@string/footer_item3"
                android:textColor="@color/white"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/footer_item4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="280dp"
                android:text="@string/footer_item4"
                android:textColor="@color/white"
                android:textSize="11sp" />

            <!-- Copyright -->
            <TextView
                android:id="@+id/footer_copyright"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/copyright"
                android:textColor="@color/white"
                android:textSize="11sp" />
    </LinearLayout>

    </LinearLayout>
    </ScrollView>